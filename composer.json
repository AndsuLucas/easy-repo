{
    "name": "andsudev/easyrepo",
    "description": "A library to abstract repository pattern",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.11",
        "phpro/grumphp": "^2.10",
        "illuminate/database": "^11.40"
    },
    "scripts": {
        "setup-elouquent-mysql": [
            "php -f ./scripts/setup_elouquent_mysql_test_database.php"
        ]
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Andsudev\\Easyrepo\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Anderson Lucas",
            "email": "a.lucassilvadeoliveira@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    }
}
